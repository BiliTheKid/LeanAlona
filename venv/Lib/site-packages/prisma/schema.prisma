// database
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// generator
generator client {
  provider             = "prisma-client-py"
  recursive_type_depth = 5
}

model UserAnswer {
  id             Int     @id @default(autoincrement())
  idNumber       String  @unique
  fullName       String
  settlementCode Int
  accessibility  Boolean
  pets           Boolean
  numberOfPeople Int
  hotelOption1   String?
  hotelOption2   String?
  hotelOption3   String?
  selectedHotel  String?

  settlement Settlement @relation(fields: [settlementCode], references: [id])
}

model Settlement {
  id          Int          @id @default(autoincrement())
  code        Int          @unique
  name        String
  alias1      String?
  alias2      String?
  alias3      String?
  userAnswers UserAnswer[]
}
